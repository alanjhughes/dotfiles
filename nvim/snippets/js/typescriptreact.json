  "Create TypeScript React Native Screen": {
    "prefix": "rnscr",
    "body": [
      "import { View, Text, StyleSheet } from 'react-native';",
      "import { Screen } from '../../components/screen/screen';",
      "",
      "interface ${functionName}Props {\n}\n",
      "export function $functionName({}: ${functionName}Props) {",
      "  return (",
      "    <Screen noSafeArea>",
      "     <Text>${functionName}</Text>",
      "    </Screen>",
      "  );",
      "};",
      "",
      "const styles = StyleSheet.create({",
      "screen: {}",
      "})"
